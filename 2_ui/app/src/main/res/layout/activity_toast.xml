<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btnSimpleToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认效果Toast"></Button>
    <Button
        android:id="@+id/btnSimpleToastWithCustomPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更改Toast显示位置"></Button>
    <Button
        android:id="@+id/btnSimpleToastToastWithImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带图片的Toast"></Button>
    <Button
        android:id="@+id/btnSimpleToastToastWithImageAndCustomPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带图片并更改位置的Toast"></Button>



</LinearLayout>